<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#F2170404"
        app:cardCornerRadius="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="deja"
                    android:fontFamily="cursive"
                    android:textSize="45dp"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brew"
                    android:fontFamily="serif"
                    android:textSize="45dp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:scaleType="centerCrop"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="30dp"
                    android:padding="10dp"
                    app:cardBackgroundColor="#57E8B9B9">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Browse Your Favourite Coffee"
                        android:drawableLeft="@drawable/baseline_search_24"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:textColor="@color/white"/>
                </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="30dp"
                                app:cardBackgroundColor="@color/brown"
                                app:cardElevation="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">


                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:src="@drawable/coffe"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/Circular" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cinamon_Cocoa"
                                android:gravity="center"
                                android:textSize="20dp"
                                android:textColor="@color/white"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="30dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#A4EDE7DD">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="99"
                                    android:drawableLeft="@drawable/baseline_currency_rupee_24"
                                    android:textSize="20dp"
                                    android:paddingLeft="50dp"
                                    android:drawableRight="@drawable/baseline_add_box_24"/>
                            </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="30dp"
                                app:cardBackgroundColor="@color/brown"
                                app:cardElevation="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">


                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:src="@drawable/coffe1"
                                        android:scaleType="centerCrop"
                                        app:shapeAppearanceOverlay="@style/Circular" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cinamon_Cocoa"
                                        android:gravity="center"
                                        android:textSize="20dp"
                                        android:textColor="@color/white"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="30dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="#A4EDE7DD">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="99"
                                            android:drawableLeft="@drawable/baseline_currency_rupee_24"
                                            android:textSize="20dp"
                                            android:paddingLeft="50dp"
                                            android:drawableRight="@drawable/baseline_add_box_24"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>




                    </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="30dp"
                                app:cardBackgroundColor="@color/brown"
                                app:cardElevation="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">


                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:src="@drawable/cofee3"
                                        android:scaleType="centerCrop"
                                        app:shapeAppearanceOverlay="@style/Circular" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cinamon_Cocoa"
                                        android:gravity="center"
                                        android:textSize="20dp"
                                        android:textColor="@color/white"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="30dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="#A4EDE7DD">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="99"
                                            android:drawableLeft="@drawable/baseline_currency_rupee_24"
                                            android:textSize="20dp"
                                            android:paddingLeft="50dp"
                                            android:drawableRight="@drawable/baseline_add_box_24"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="30dp"
                                app:cardBackgroundColor="@color/brown"
                                app:cardElevation="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">


                                    <com.google.android.material.imageview.ShapeableImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:src="@drawable/coffee6"
                                        android:scaleType="centerCrop"
                                        app:shapeAppearanceOverlay="@style/Circular" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cinamon_Cocoa"
                                        android:gravity="center"
                                        android:textSize="20dp"
                                        android:textColor="@color/white"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="30dp"
                                        android:layout_gravity="center"
                                        app:cardBackgroundColor="#A4EDE7DD">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="99"
                                            android:drawableLeft="@drawable/baseline_currency_rupee_24"
                                            android:textSize="20dp"
                                            android:paddingLeft="50dp"
                                            android:drawableRight="@drawable/baseline_add_box_24"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>