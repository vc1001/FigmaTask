<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_margin="12dp"
            android:padding="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#403D3D"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="115dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:id="@+id/homeimage"
                    android:scaleType="fitCenter"
                    android:src="@drawable/coffe1"
                    app:shapeAppearanceOverlay="@style/SpecificCornerRounded"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_star_rate_24"
                    android:text="4.5"
                    android:id="@+id/homerating"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cinnamon"
                    android:id="@+id/homename"
                    android:textColor="#CCC6C6"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cocoa"
                    android:id="@+id/homeflavour"
                    android:textSize="20dp"
                    android:textColor="#CCC6C6" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>